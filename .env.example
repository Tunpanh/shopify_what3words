# 32-byte key encoded as base64 (example generated with: openssl rand -base64 32)
APP_ENCRYPTION_KEY=

# Shopify app credentials
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# App URL used by OAuth and embedded app routing
SHOPIFY_APP_URL=

# Comma-separated scopes (must align with shopify.app.toml)
SCOPES=read_orders,write_orders,write_metafields

